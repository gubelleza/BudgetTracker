@model CreateExpenseViewModel

<div class="d-flex flex-column align-items-center">
    <div id="add-categories-title" class="border-bottom border-dark">
        <h3>Add New Expense</h3>
    </div>
    <div class="shadow p-4 rounded-lg w-50">
        <form asp-action="SubmitCreate" method="post">
            <partial name="Inputs/_AmountPaidInputPartial" model="@Model"/>
            <partial name="Inputs/_PaidByInputPartial" model="@Model"/>
            <partial name="Inputs/_PaidAtInputPartial" model="@Model"/>
            <partial name="Inputs/_CategoryInputPartial" model="@Model"/>
            
            <div class="d-flex justify-content-center">
                <input class="btn btn-success" type="submit" value="Confirm"/>
            </div>
        </form>
    </div>
</div>
