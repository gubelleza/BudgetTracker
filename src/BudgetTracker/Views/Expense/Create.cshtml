@model CreateExpenseViewModel

<div class="d-flex flex-column align-items-center">
    <div id="add-categories-title" class="border-bottom border-dark">
        <h3>Add New Expense</h3>
    </div>
    <div class="shadow p-4 rounded-lg w-50">
        <form asp-action="SubmitCreate" method="post">
        <div class="form-group">
            <label for="amount-paid">Amount Paid:</label>
            <span asp-validation-for="AmountPaid" class="text-danger"></span>
            <input 
                id="amount-paid" 
                type="number" 
                step="any" 
                asp-for="AmountPaid" 
                value="@Model.AmountPaid"
                class="form-control" 
            />
        </div>
        <div class="form-group">
            <label for="select-paid-by">Paid By:</label>
            <span asp-validation-for="BudgetMemberName" class="text-danger"></span>
            <select 
                    id="select-paid-by" 
                    asp-for="BudgetMemberName"
                    value="@Model.BudgetMemberName"
                    class="custom-select"
            >
                @foreach (var name in Model.BudgetMembersNames)
                {
                    <option value="@name">@name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="paid-at">Paid At:</label>
            <span asp-validation-for="PaidAt" class="text-danger"></span>
            <input 
                   id="paid-at" 
                   type="date" 
                   asp-for="PaidAt" 
                   class="form-control" 
                   value="@DateTime.Now.ToString("yyyy-MM-dd")"
            >
        </div>
        <div class="form-group">
            <label for="select-category">Category:</label>
            <select 
                    id="select-category" 
                    asp-for="ExpenseCategoryId" 
                    class="custom-select"
                    value="@Model.ExpenseCategoryId"
            >
                @foreach (var category in Model.CurrentCategories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>  
            
            <div class="d-flex justify-content-center mr-3">
                  <a class="btn btn-danger" 
                     asp-controller="Budget" 
                     asp-action="Display"
                     asp-route-budgetId="@Model.BudgetId">Cancel</a>
                <input class="btn btn-success ml-3" 
                       type="submit" 
                       value="Confirm"/>
            </div>
            <div>
                <input type="hidden" asp-for="BudgetId" value="@Model.BudgetId"/> 
            </div>
        </form>
    </div>
</div>
