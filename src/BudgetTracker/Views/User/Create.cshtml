@model CreateUserViewModel

<div class="d-flex flex-column align-items-center">
    <div id="add-categories-title" class="border-bottom border-dark">
        <h3>Sign up</h3>
    </div>
    <div class="shadow p-4 rounded-lg w-50">
        <form asp-action="SubmitCreate" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <span asp-validation-for="Username" class="text-danger"></span>
                <input 
                    id="username" 
                    type="text" 
                    asp-for="Username" 
                    value="@Model.Username"
                    class="form-control"/>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input 
                       id="email" 
                       type="email" 
                       asp-for="Email" 
                       value="@Model.Email"
                       class="form-control"/>
            </div>
            <div class="form-group">
                <label for="confirm-email">Confirm Email:</label>
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                <input 
                    id="confirm-email" 
                    type="email" 
                    asp-for="ConfirmEmail" 
                    value="@Model.ConfirmEmail"
                    class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input 
                    id="password" 
                    type="password" 
                    asp-for="Password" 
                    value="@Model.Password"
                    class="form-control"/>
            </div>
            <div class="form-group">
                <label for="confirm-password">Confirm Password:</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input 
                       id="confirm-password" 
                       type="password" 
                       asp-for="ConfirmPassword" 
                       value="@Model.ConfirmPassword"
                       class="form-control"/>
            </div>
            <div class="d-flex justify-content-center">
                <input class="btn btn-success" type="submit" value="Confirm"/>
            </div>
        </form>
    </div>
</div>
